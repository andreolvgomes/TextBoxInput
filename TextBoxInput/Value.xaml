<Window x:Class="TextBoxInput.Value"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="Height" Width="250" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize">
    <StackPanel>
        <Border Background="Black">
            <TextBlock Text="Enter para confimar" Foreground="White"/>
        </Border>
        <TextBox x:Name="txtValue" FontSize="50" PreviewKeyDown="txtValue_PreviewKeyDown"/>
    </StackPanel>
</Window>